{
  "name": "@wdp/theme",
  "version": "1.0.0",
  "private": "true",
  "description": "Shared resets and mixins between admin and frontend",
  "main": "index.ts",
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --cache -c .eslintrc.js \"**/*.ts\"",
    "lint:css": "stylelint --config .stylelintrc.js \"**/*.ts\"",
    "fix": "npm-run-all fix:*",
    "fix:js": "eslint --cache -c .eslintrc.js \"**/*.ts\" --fix",
    "types": "npx tsc --strict -w"
  },
  "author": "",
  "license": "MIT",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "ssr": false
        }
      ]
    ]
  },
  "dependencies": {
    "@castiron/style-mixins": "^1.0.6",
    "styled-components": "^5.3.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "@babel/core": "^7.16.0",
    "@types/styled-components": "^5.1.15",
    "babel-plugin-styled-components": "^1.13.1"
  }
}
